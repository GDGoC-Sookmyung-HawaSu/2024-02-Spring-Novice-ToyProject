{{>layout/header}}

<h1>마이페이지</h1>
<div class="container">
    <div class="profile">
        <img src="{{userPicture}}" alt="Profile Picture" class="profile-picture">
        <h2>{{userName}}</h2>
        <p>{{userEmail}}</p>
    </div>

    <hr>

    <div class="my-posts">
        <h3>내가 쓴 글 목록</h3>
        {{#posts}}
            <div class="post-item">
                <h4><a href="/posts/update/{{id}}">{{title}}</a></h4>
                <p>최종 수정일: {{modifiedDate}}</p>
            </div>
            <hr>
        {{/posts}}
        {{^posts}}
            <p>작성한 글이 없습니다.</p>
        {{/posts}}
    </div>

    <hr>

    <div class="my-follows">
        <div class="follows">
            <h3>내 팔로워 목록</h3>
            {{#followers}}
                <div class="follow-item">
                    <p><strong>이름:</strong> {{followerName}}</p>
                    <p><strong>이메일:</strong> {{followerEmail}}</p>
                </div>
                <hr>
            {{/followers}}
            {{^followers}}
                <p>팔로워가 없습니다.</p>
            {{/followers}}
        </div>

        <hr>

        <div class="followings">
            <h3>내 팔로잉 목록</h3>
            {{#followings}}
                <div class="following-item">
                    <p><strong>이름:</strong> {{followeeName}}</p>
                    <p><strong>이메일:</strong> {{followeeEmail}}</p>
                </div>
                <hr>
            {{/followings}}
            {{^followings}}
                <p>팔로잉한 사람이 없습니다.</p>
            {{/followings}}
        </div>
    </div>
</div>

<style>
    .profile {
        text-align: center;
        margin-top: 20px;
    }
    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
    }
    .my-posts, .my-follows {
        margin-top: 30px;
    }
    .post-item, .follow-item, .following-item {
        margin: 10px 0;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    .post-item h4, .follow-item p, .following-item p {
        margin: 0;
    }
    .post-item p {
        color: #555;
    }
</style>

{{>layout/footer}}
